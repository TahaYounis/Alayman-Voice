<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/PoppinsTextStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="textInputStyle">@style/EditTextStyle</item>
    </style>

    <style name="EditTextStyle" parent="Widget.Design.TextInputLayout">
        <item name="backgroundTint">@android:color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="PlayButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="cornerRadius">25dp</item>
    </style>

    <style name="PoppinsTextStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="textTitleStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/arabic_font_3</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textTitleStyle2" parent="android:Widget.TextView">
        <item name="fontFamily">@font/arabic_font_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="textBodyStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/arabic_font_thin</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>